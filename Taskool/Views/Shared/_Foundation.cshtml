                <li class="name">
                    <h1>
                        <a href="/">
                            <img src="~/Images/bullet.png" />
                        </a>
                    </h1>
                </li>
                <li class="toggle-topbar menu-icon">
                    <a href="#"></a>
                </li>
            </ul>
            <section class="top-bar-section">
                <ul class="left">
                    <li>
                        @Html.ActionLink("Inicio", "Index", "Home")
                    </li>
@*                    <li>
                        <a href="~/About">Acerca de</a>
                    </li>*@
                </ul>
                <ul class="right">
                    
                        @Html.Partial("_LoginPartial")
                                       
                </ul>
            </section>
        </nav>
        <!-- End Navigation -->
    </div>
    <br/>

@*    <div class="row">
        <div class="twelve columns">
